use crate::ast::Call;

grammar;

pub File: Vec<Call> = {
    "SOI" <calls:CallList> "EOI" => calls,
};

CallList: Vec<Call> = {
    <c:Call> ** "," => c,
};

Call: Call = {
    <name:Ident> "(" <args:ArgList> ")" => Call { name, args },
};

ArgList: Vec<Call> = {
    <c:Call> ** "," => c,
    => vec![],
};

Ident: String = {
    r"[a-zA-Z_][a-zA-Z0-9_]*" => match_str.to_string(),
};
